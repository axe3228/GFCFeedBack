<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/actMain_ivStoreLogo"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/floyds"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="70dp"/>

    <TextView
        android:id="@+id/actMain_tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOW WAS OUR SERVICE TODAY?"
        android:layout_marginLeft="100dp"
        android:textSize="30dp"
        android:textColor="#000"
        android:fontFamily=""
        android:layout_marginTop="75dp"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/actMain_tvLabel"
        android:background="@drawable/xml_gradient_shadow"
        android:layout_marginTop="5dp"
        android:layout_marginRight="210dp"/>

    <TextView
        android:id="@+id/actMain_tvLblRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please rate our service"
        android:textColor="#0000FF"
        android:textSize="25sp"
        android:fontFamily="serif"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:layout_below="@+id/actMain_ivStoreLogo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excellent"
                android:textSize="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/actMain_ivExcellent"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/excellent"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/xml_icon_shadow"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good"
                android:textSize="25dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/actMain_ivGood"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/good"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/xml_icon_shadow"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average"
                android:textSize="25dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/actMain_ivAverage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/average"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/xml_icon_shadow"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poor"
                android:textSize="25dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/actMain_ivPoor"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/poor"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/xml_icon_shadow"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>