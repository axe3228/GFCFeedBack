<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/xml_dialog_background">

    <TextView
        android:id="@+id/dlgGoodSuggest_tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHAT CAN WE IMPROVE ON?"
        android:textStyle="bold"
        android:textColor="@color/PrimaryFont"
        android:textSize="20sp"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/xml_gradient_shadow"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

    <LinearLayout
        android:id="@+id/dlgGoodSuggest_llFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/xml_white_background_border"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@+id/dlgGoodSuggest_tvQuestion">

        <ImageView
            android:id="@+id/dlgGoodSuggest_ivFood"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/food" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif"
            android:text="Food Quality"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

        <ImageView
            android:id="@+id/dlgGoodSuggest_ivFoodCheck"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/check"
            android:layout_gravity="right"
            android:layout_marginLeft="-35dp"
            android:paddingTop="3dp"
            android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/dlgGoodSuggest_llCleanliness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/dlgGoodSuggest_llFood"
        android:background="@drawable/xml_white_background_border"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@+id/dlgGoodSuggest_tvQuestion">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/cleanliness" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif"
            android:text="Cleanliness"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

        <ImageView
            android:id="@+id/dlgGoodSuggest_ivCleanlinessCheck"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/check"
            android:layout_gravity="right"
            android:layout_marginLeft="-35dp"
            android:paddingTop="3dp"
            android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/dlgGoodSuggest_llService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/dlgGoodSuggest_llCleanliness"
        android:background="@drawable/xml_white_background_border"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@+id/dlgGoodSuggest_tvQuestion">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/service" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif"
            android:text="Service"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

        <ImageView
            android:id="@+id/dlgGoodSuggest_ivServiceCheck"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/check"
            android:layout_gravity="right"
            android:layout_marginLeft="-35dp"
            android:visibility="invisible"
            android:paddingTop="3dp"/>

    <LinearLayout
        android:id="@+id/dlgGoodSuggest_llAtmosphere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/dlgGoodSuggest_llService"
        android:background="@drawable/xml_white_background_border"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@+id/dlgGoodSuggest_tvQuestion">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/atmosphere" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif"
            android:text="Ambience"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

        <ImageView
            android:id="@+id/dlgGoodSuggest_ivAtmosphereCheck"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:visibility="invisible"
            android:src="@drawable/check"
            android:layout_gravity="right"
            android:layout_marginLeft="-35dp"
            android:paddingTop="3dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/dlgGoodSuggest_btnSubmit"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:text="SUBMIT"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:background="@drawable/xml_border_blue"/>

</LinearLayout>