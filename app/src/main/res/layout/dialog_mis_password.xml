<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/xml_dialog_background">

    <ImageView
        android:id="@+id/dlgMISP_ivPasswordToggle"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:src="@drawable/passwordtoggleoff"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:id="@+id/dlgMISP_etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MIS Password"
        android:textSize="15sp"
        android:maxLength="10"
        android:fontFamily="casual"
        android:layout_toRightOf="@+id/dlgMISP_ivPasswordToggle"
        android:textColor="@android:color/black"
        android:inputType="numberPassword"
        android:layout_marginLeft="5dp"
        android:background="#fff"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/dlgMISP_ivSubmit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_forward_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="2dp"/>

</RelativeLayout>